<div class="square" @onclick="@ClickHandler">@value</div>
@functions {
    [Parameter]
    public char value { get; set; }
    [Parameter]
    public EventCallback ClickHandler { get; set; }
}

<style scoped>
    .square {
        background-color: #5F5AA2;
        margin: 3px;
        width: 60px;
        height: 60px;
        font-size: 30px;
        color: white;
        text-align: center;
        vertical-align: middle;
        line-height: 60px;
        border-radius: 10%;
        cursor: pointer;
    }
    .square:hover {
        background-color: #4DCDAC;
    }
</style>